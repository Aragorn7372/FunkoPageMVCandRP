@model FunkoMVC.Model.FunkoModelViews

@{
    ViewData["Title"] = "Detalle del Funko";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">@Model.Nombre</h2>
                    <span class="text-muted">Categoría</span>
                    <span class="badge bg-outline-primary border text-primary ms-2">
                        @Model.Categoria
                    </span>
                </div>

                <span class="fs-2 fw-bold text-success">
                    @Model.Precio.ToString("C")
                </span>
            </div>

            <!-- Contenido principal -->
            <div class="row g-4">

                <!-- Imagen -->
                <div class="col-md-5">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <img src="@Model.Imagen"
                                 alt="@Model.Nombre"
                                 class="img-fluid rounded"
                                 style="max-height: 380px; object-fit: contain;"
                                 onerror="this.src='/uploads/default.png'" />
                        </div>
                    </div>
                </div>

                <!-- Detalles -->
                <div class="col-md-7">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="fw-semibold mb-4">Detalles del producto</h5>

                            <div class="mb-3">
                                <span class="text-muted d-block">ID del producto</span>
                                <span class="fw-medium">@Model.Id</span>
                            </div>

                            <div class="mb-3">
                                <span class="text-muted d-block">Precio</span>
                                <span class="fs-4 fw-bold text-success">
                                    @Model.Precio.ToString("C")
                                </span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>

                            <a asp-action="Update"
                               asp-route-id="@Model.Id"
                               class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
