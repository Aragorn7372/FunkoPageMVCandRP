@page
@model IndexModel
@{
    ViewData["Title"] = "Funkos";
}
@if (Model.VistosRecientemente.Any())
{
    <div class="card mb-4 bg-light shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-muted mb-3"><i class="bi bi-clock-history"></i> Vistos recientemente</h5>
            <div class="row g-3">
                @foreach (var funko in Model.VistosRecientemente)
                {
                    <div class="col-md-4">
                        <div class="d-flex align-items-center bg-white border rounded p-2">
                            <img src="@funko.Imagen" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/uploads/default.png'" />
                            <div>
                                <h6 class="mb-0 text-truncate" style="max-width: 150px;">@funko.Nombre</h6>
                                <span class="badge bg-secondary">@funko.Categoria</span>
                            </div>
                            <a asp-page="./Funkos/Details" asp-route-id="@funko.Id" class="btn btn-sm btn-outline-primary ms-auto">
                                Ver
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<div class="container mt-3">
@if (TempData["Creado"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["Creado"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
        
@if (TempData["Actualizado"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle"></i> @TempData["Actualizado"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
        
@if (TempData["Eliminado"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle"></i> @TempData["Eliminado"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
</div>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-center mb-0">Lista de Funkos</h1>
        <a asp-page="./Edit" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Funko
        </a>
    </div>
    <!-- Buscador -->
    <div class="row mb-4">
        <form method="get">
            <div class="input-group">
                <input type="text" asp-for="Nombre" class="form-control" placeholder="Buscar por nombre...">
                
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Buscar
                </button>
                
                @if (!string.IsNullOrEmpty(Model.Nombre))
                {
                    <a asp-page="./Index" class="btn btn-outline-secondary">Limpiar</a>
                }
            </div>
        </form>
    </div>
    <!-- Funko -->
    @foreach (var funko in Model.FunkoResponses)
    {
        <div class="card mb-3 funko">
            <div class="row g-0 align-items-center">

                <div class="col-md-2 text-center">
                    <img src="@funko.Imagen" class="img-fluid rounded-start p-2" alt="Funko">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title">@funko.Nombre</h5>
                        <p class="card-text mb-1">@funko.Id</p>
                        <p class="card-text mb-1">@funko.Categoria</p>
                        <p class="card-text">@funko.Precio</p>
                    </div>
                </div>
                <div class="col-md-3 text-center mb-3 mb-md-0">
                    <a asp-page="./Funko" asp-route-id="@funko.Id" class="btn btn-info btn-sm text-white" title="Detalles">
                        <i class="bi bi-eye">Detalles</i>
                    </a>
                    <a asp-page="./Edit" asp-route-id="@funko.Id" class="btn btn-warning btn-sm text-white" title="Editar">
                        <i class="bi bi-pencil">Editar</i>
                    </a>

                    <form method="post" asp-page-handler="Delete" asp-route-id="@funko.Id"
                          style="display:inline;"
                          onsubmit="return confirm('¿Seguro que quieres borrar a @funko.Nombre?');">

                        <button type="submit" class="btn btn-danger btn-sm" title="Borrar">
                            <i class="bi bi-trash">Eliminar</i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    }
</div>

