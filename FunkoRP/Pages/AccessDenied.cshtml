@page
@model FunkoRP.Pages.AccessDenied
@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
    <div class="text-center" style="max-width: 520px; width: 100%;">

        <!-- Icon -->
        <div class="position-relative d-flex justify-content-center mb-4">
            <div class="rounded-circle bg-danger bg-opacity-10 d-flex align-items-center justify-content-center"
                 style="width: 140px; height: 140px;">
                <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
            </div>

            <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-danger p-3">
                <i class="bi bi-x-lg"></i>
            </span>
        </div>

        <!-- Text -->
        <h1 class="display-4 fw-black mb-2">403</h1>
        <h2 class="h3 fw-bold mb-3">¡Alto ahí, coleccionista!</h2>
        <p class="text-muted mb-4">
            Parece que intentas entrar a una zona restringida.
            No tienes los permisos necesarios para ver este contenido.
        </p>

        <!-- Info Card -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body d-flex text-start gap-3">
                <div class="text-warning fs-4">
                    <i class="bi bi-exclamation-octagon-fill"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">Permisos insuficientes</h6>
                    <p class="small text-muted mb-0">
                        Tu cuenta actual no tiene el rol de
                        <span class="badge bg-secondary font-monospace">Administrador</span>.
                    </p>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="row g-2">
            <div class="col-12 col-sm-6">
                <a asp-page="/Index" class="btn btn-primary w-100">
                    <i class="bi bi-house me-2"></i> Ir al inicio
                </a>
            </div>

            @if (!User.Identity?.IsAuthenticated ?? true)
            {
                <div class="col-12 col-sm-6">
                    <a asp-page="/Login" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar sesión
                    </a>
                </div>
            }
            else
            {
                <div class="col-12 col-sm-6">
                    <form method="post" asp-page="/Logout">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-box-arrow-right me-2"></i> Cambiar cuenta
                        </button>
                    </form>
                </div>
            }
        </div>

        <!-- Footer -->
        <p class="mt-5 small text-muted fst-italic">
            ¿Crees que esto es un error? Contacta con el equipo de soporte.
        </p>
    </div>
</div>
